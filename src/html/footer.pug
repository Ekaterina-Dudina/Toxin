footer.footer
	.footer__container._container
		.footer__body 
			.footer__main 
				.footer__slogan.slogan-footer
					a(href='index.html').slogan-footer__logo
						img(src="@img/logo.svg", alt="logo")
					.slogan-footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
				.footer__menu.menu-footer
					h3.menu-footer__title Навигация
					ul.menu-footer__list 
						li.menu-footer__item 
							a(href='404.html').menu-footer__link О нас
						li.menu-footer__item 
							a(href='404.html').menu-footer__link Новости
						li.menu-footer__item 
							a(href='404.html').menu-footer__link Служба поддержки
						li.menu-footer__item 
							a(href='404.html').menu-footer__link Услуги
				.footer__about.about-footer
					h3.about-footer__title О нас
					ul.about-footer__list 
						li.about-footer__item 
							a(href='404.html').about-footer__link О сервисе
						li.about-footer__item 
							a(href='404.html').about-footer__link Наша команда
						li.about-footer__item 
							a(href='404.html').about-footer__link Вакансии
						li.about-footer__item 
							a(href='404.html').about-footer__link Инвесторы
				.footer__support.about-footer
					h3.support-footer__title Служба поддержки
					ul.support-footer__list 
						li.support-footer__item 
							a(href='404.html').support-footer__link Соглашения
						li.support-footer__item 
							a(href='404.html').support-footer__link Сообщества
						li.support-footer__item 
							a(href='404.html').support-footer__link Связь с нами
				.footer__subscription.subscription-footer 
					h3.subscription-footer__title Подписка
					.subscription-footer__text Получайте специальные предложения и новости сервиса
					.subscription-footer__field.form
						form.form__body(action="#")
							.form__item(tabindex="0")
								label(for="formEmail").form__label
									input(type="text" id="formEmail" name="email" placeholder="Email").form__input
								button.form__button.material-icons-outlined arrow_forward
		.footer__copy.copy
			.copy__body 
				.copy__text Copyright © 2018 Toxin отель. Все права защищены.
				.copy__social.social-copy
					button.social-copy__button._icon-twitter 
					button.social-copy__button._icon-facebook 
					button.social-copy__button._icon-insta 

			

